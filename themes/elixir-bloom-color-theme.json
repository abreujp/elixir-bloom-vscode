{
  "name": "Elixir Bloom",
  "type": "dark",
  "colors": {
    "editor.background": "#1A1626",
    "editor.foreground": "#F5EBFF",
    "editor.lineHighlightBackground": "#2A2433",
    "editorCursor.foreground": "#F5EBFF",
    "editorLineNumber.foreground": "#473357",
    "editorLineNumber.activeForeground": "#957ED3",
    "sideBar.background": "#1A1626",
    "sideBar.foreground": "#ECC1FF",
    "activityBar.background": "#1A1626",
    "statusBar.background": "#1A1626",
    "titleBar.activeBackground": "#1A1626"
  },
  "tokenColors": [
    {
      "name": "Elixir Module",
      "scope": [
        "entity.name.type.module.elixir"
      ],
      "settings": {
        "foreground": "#957ED3"
      }
    },
    {
      "name": "Elixir Function",
      "scope": [
        "entity.name.function.elixir"
      ],
      "settings": {
        "foreground": "#FF6B6B"
      }
    },
    {
      "name": "Elixir String",
      "scope": [
        "string.quoted.double.elixir",
        "string.quoted.single.elixir"
      ],
      "settings": {
        "foreground": "#8ECDB4"
      }
    },
    {
      "name": "Elixir Atom",
      "scope": [
        "constant.other.symbol.elixir"
      ],
      "settings": {
        "foreground": "#FF9F6B"
      }
    },
    {
      "name": "Elixir Variable",
      "scope": [
        "variable.other.readwrite.elixir"
      ],
      "settings": {
        "foreground": "#ECC1FF"
      }
    },
    {
      "name": "Elixir Operators",
      "scope": [
        "keyword.operator.elixir"
      ],
      "settings": {
        "foreground": "#FF9F6B"
      }
    },
    {
      "name": "Comments",
      "scope": [
        "comment.line",
        "comment.block"
      ],
      "settings": {
        "foreground": "#473357",
        "fontStyle": "italic"
      }
    },
    {
      "name": "Keywords",
      "scope": [
        "keyword.control",
        "keyword.other"
      ],
      "settings": {
        "foreground": "#FFD93D"
      }
    },
    {
      "name": "Function Calls",
      "scope": [
        "meta.function-call.elixir"
      ],
      "settings": {
        "foreground": "#FF6B6B"
      }
    },
    {
      "name": "Module Attributes",
      "scope": [
        "variable.other.constant.elixir"
      ],
      "settings": {
        "foreground": "#957ED3"
      }
    }
  ]
}